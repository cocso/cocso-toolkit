{
  "name": "cocso-toolkit",
  "version": "0.0.1-beta.1",
  "workspaces": [
    "docs/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cocso/cocso-toolkit.git"
  },
  "scripts": {
    "build": "rm -rf lib && bun run build.js && bun x tsc",
    "dev": "bun run build.js --watch",
    "lint": "bun run lint",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "dayjs": "^1.11.13"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "esbuild": "^0.25.6",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": "^19 || ^18"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.18",
  "publishConfig": {
    "access": "public"
  }
}
